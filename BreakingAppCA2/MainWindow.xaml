<Window x:Class="BreakingAppCA2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakingAppCA2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="car-dashboard.jpg"/>
    </Window.Background>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BtnSpeedEnter_Click" Background="Black" Margin="89,0,86,0" Height="53" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="104" Content="Start" ClipToBounds="True" Foreground="#FFEEEAEA" BorderBrush="#FF954141" Click="BtnSpeedEnter_Click_1" Grid.Column="1"/>
        <TextBlock x:Name="Tbx_Speed_OutPut" HorizontalAlignment="Left" Margin="235,65,0,0" TextWrapping="Wrap" Text="Speed" VerticalAlignment="Top" Height="31" Width="140" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Tbx_Speed_Input" HorizontalAlignment="Left" Height="15" Margin="99,300,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="65" Opacity="0.3" FontWeight="Bold" Grid.Column="1"/>
        <Button x:Name="BtnCarAdd"  HorizontalAlignment="Left" Margin="140,345,0,0" VerticalAlignment="Top" Width="25" Height="35" Foreground="#FFFDFCFC" BorderBrush="#FF3E3A3A" Click="BtnAddCar" IsDefault="True" AutomationProperties.IsRequiredForForm="True" >
            <Button.Background>
                <ImageBrush ImageSource="carIconWhite.jpg"/>
            </Button.Background>
        </Button>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="241" Width="255" BorderBrush="#FFB2191B"
                BorderThickness="2 2 2 2" CornerRadius="300 300 300 300"  Margin="14,125,0,0" RenderTransformOrigin="0.5,0.283" Grid.Column="1">
            <Border Width="3" CornerRadius="300 300 0 0" Background="OrangeRed"  RenderTransformOrigin="0.5 1" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Margin="122,58,0,0">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-124.506"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect Color="black" ShadowDepth="2"/>
                </Border.Effect>
            </Border>
        </Border>
        <DataGrid x:Name="DataTest" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="10,50,0,0" VerticalAlignment="Top" Width="100"/>


    </Grid>


</Window>
